{
  "mcpServers": {
    "ai-music-player": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/zhiwehu/aiplaymusic",
        "--python",
        "python3",
        "ai-music-player"
      ],
      "env": {
        "MUSIC_DIR": "/path/to/your/music",
        "DATABASE_PATH": "music.db",
        "DEFAULT_VOLUME": "0.7"
      }
    }
  }
}
